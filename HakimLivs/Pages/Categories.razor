@using HakimLivs.Models

<ul class="m-1">

    @if (CategoryList == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        @foreach (var cat in CategoryList)
        {
            <li class="list-unstyled mb-2">
                <button class="category-btn btn btn-primary" @onclick="@(() => DisplayCategoryEvent.InvokeAsync(cat.Id))">@cat.Name</button>
            </li>
        }
    }

</ul>



@code {
    [Parameter]
    public List<Category> CategoryList { get; set; }

    [Parameter]
    public EventCallback<int> DisplayCategoryEvent { get; set; }
    private string selectedItem = "first";
}
